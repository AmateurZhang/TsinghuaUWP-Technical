<Page
    x:Class="ClassRoomAPI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassRoomAPI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="DataTemplate"                                     >
            <Grid x:ConnectionId='4'>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition   Width="120" />
                    <ColumnDefinition   Width="*" />
                    <ColumnDefinition   Width="2*" />
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='5'                                
                           FontSize="18"
                           Foreground="Black"
                             TextWrapping="Wrap"
                             />
                <TextBlock x:ConnectionId='6'                               
                           FontSize="18"
                           Foreground="Black"
                             TextWrapping="Wrap"
                           Grid.Column="1"
                           Margin="24,0,20,0"
                             />
                <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock x:ConnectionId='7'                                     
                           FontSize="18"
                           Foreground="Black"
                             TextWrapping="Wrap"
                           Margin="2,0,0,0"
                             />
                    <TextBlock x:ConnectionId='8'                                     
                           FontSize="18"
                           Foreground="Black"
                             TextWrapping="Wrap"
                           Margin="2,0,0,0"
                             />
                    <TextBlock x:ConnectionId='9'                                     
                           FontSize="18"
                           Foreground="Black"
                             TextWrapping="Wrap"
                           Margin="2,0,0,0"
                             />
                    <TextBlock x:ConnectionId='10'                                     
                           FontSize="18"
                           Foreground="Black"
                             TextWrapping="Wrap"
                           Margin="2,0,0,0"
                             />
                    <TextBlock x:ConnectionId='11'                                     
                           FontSize="18"
                           Foreground="Black"
                             TextWrapping="Wrap"
                           Margin="2,0,0,0"
                             />
                    <TextBlock x:ConnectionId='12'                                     
                           FontSize="18"
                           Foreground="Black"
                             TextWrapping="Wrap"
                           Margin="2,0,0,0"
                             />
                </StackPanel>
                
                
            </Grid>
        </DataTemplate >

        <DataTemplate x:Key="HallDataTemplate"                                 >
            <Grid x:ConnectionId='1'>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition   Width="*" />
                    <ColumnDefinition   Width="*" />
                </Grid.ColumnDefinitions>

                    <TextBlock x:ConnectionId='2'                            
                           FontSize="18"
                           Foreground="Black"
                             TextWrapping="Wrap"
                               ScrollViewer.HorizontalScrollMode="Enabled"
                               ScrollViewer.HorizontalScrollBarVisibility="Visible"
                             />

                
                <TextBlock x:ConnectionId='3'                               
                           FontSize="18"
                           Foreground="Black"
                             TextWrapping="Wrap"
                           Grid.Column="1"
                           Margin="24,0,20,0"
                             />
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <Pivot Title="Information Hub">
            <PivotItem Header="Classroom Information">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <Button x:ConnectionId='16' Name="HHH" Content="Click To Get Building Names" Height="50" Width="300"                   FontSize="18" Grid.Row="0" ></Button>
                    </StackPanel>


                    <ListView x:ConnectionId='15' Name="NavMenuPrimaryListView" 
                      Grid.Row="1"                    
                      ItemTemplate="{StaticResource DataTemplate}" 
                      >

                    </ListView>
                </Grid>
            </PivotItem>
            <PivotItem Header="Hall Information">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <Button x:ConnectionId='14' Name="GetHallList" Content="Click To Get Hall Lists" Height="50" Width="300"                           FontSize="18" Grid.Row="0" ></Button>
                    </StackPanel>


                    <ListView x:ConnectionId='13' Name="HallListView" 
                      Grid.Row="1"                    
                      ItemTemplate="{StaticResource HallDataTemplate}" 
                      >

                    </ListView>
                </Grid>
            </PivotItem>
        </Pivot>
        
        
    </Grid>
</Page>

