<Page
    x:Class="ClassRoomAPI.Views.IntroPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassRoomAPI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="BlueViolet" Grid.Row="0">
            <Image Grid.Row="0" Source="ms-appx:///Assets/Wide310x150Logo.scale-400.png" HorizontalAlignment="Center"/>
            
        </StackPanel>
        <StackPanel Grid.Row="1" Background="White" VerticalAlignment="Center">
            <TextBlock Text="InsTsinghua UWP" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="黑体" FontSize="36" Foreground="Purple"/>
            <TextBlock Text="Version 2.1.0" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="黑体" FontSize="12" Foreground="Purple"/>
            <TextBlock Text="求扩散，求好评" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="黑体" FontSize="16" Foreground="Purple"/>
            <TextBlock Text="Inspired by https://github.com/lizy14/Tsinghua-UWP" HorizontalAlignment="Center" FontFamily="黑体" FontSize="16" Foreground="Purple"/>
        </StackPanel>
    </Grid>
</Page>
