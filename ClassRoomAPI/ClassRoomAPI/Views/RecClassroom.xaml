            <Button Name="BuildingFour" Content="四教" Width="210" Height="80" Background="Purple" Foreground="White" FontSize="34"  Click="BuildingFour_Click" />
            <Button Name="BuildingFive" Content="五教" Width="210" Height="80" Background="Purple" Foreground="White" FontSize="34" Click="BuildingFive_Click" />
            <Button Name="BuildingSix"  Content="六教" Width="210" Height="80" Background="Purple" Foreground="White" FontSize="34"  Click="BuildingSix_Click" />
